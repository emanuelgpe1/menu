
local args = {
    [1] = workspace:WaitForChild("ScavengerPieces"):WaitForChild("Blue Shard")
}

game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("ScavengerHunt"):FireServer(unpack(args))
